---
import {Image} from 'astro:assets';
import Layout from '../layouts/layout.astro';
import listIcon from '../images/icon-list.svg';
---

<Layout>
    <main>
        <section class="content">
            <Image id="img" src={listIcon} alt="list icon" />
            <h1>Thanks for subscribing!</h1>
            <p>
                A confirmation email has been sent to <span></span>.
                Please open it and click the button inside to confirm your subscription.
            </p>
            <a href="/">
                <button>Dismiss message</button>
            </a>

        </section>
    </main>
</Layout>

<script lang="js">
    if(!localStorage.getItem("email") || localStorage.getItem("email") === null) {
        window.location.href = "/newsletterSign/";
    }

    const span = document.querySelector("span");
    const exitButton = document.querySelector("a");
    span.innerText = localStorage.getItem("email");

    exitButton.addEventListener('click', () => {
        localStorage.setItem("email", null);
    })
</script>

<style lang="scss">

    body {
      width : 100vw;
      @media screen and (max-width : 1024px) and (orientation: portrait) {
        display: flex;
        align-items: flex-start;
      }
    }

    main {
        min-width: 35rem;
        max-width : 35rem;
        min-height: 35rem;
        background-color: var(--white);
        box-sizing: border-box;
        border-radius: 2rem;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        display: flex;
        padding : 1rem;

      @media screen and (max-width : 1024px) and (orientation: portrait) {
        width : 90vw;
        min-width: 90vw;
        height : 46vh;
        min-height: 46vh;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
        padding-top: 0;

        @media screen and (max-width : 600px) {
          height : 60vh;
          min-height: 60vh;
        }

      }

        .content {
          width: 100%;
          padding : 5rem;
          padding-right : 0rem;
          padding-bottom: 0rem;

          @media screen and (max-width : 1024px) and (orientation: portrait) {
            padding : 1rem;
          }

          h1 {
            font-size: 3.5rem;
            font-family: 'Roboto Bold';
            color: var(--dark-slate-grey);
            margin: 0;
            margin-top : 1rem;

            @media screen and (max-width : 1024px) and (orientation: portrait) {
              font-size: 2.5rem;

              @media screen and (min-width : 900px) {
                font-size: 3.5rem;
              }
            }
          }

          p {
            font-family: 'Roboto', sans-serif;
            font-weight: 300;
            font-size: 1.05rem;
            margin: 0;
            max-width: 85%;
            line-height: 1.5rem;
            margin-top: 1rem;
            margin-bottom: 2rem;

            @media screen and (max-width : 1024px) and (orientation: portrait) {
              font-size: 1rem;
              max-width: 100%;

              @media screen and (min-width : 900px) {
                font-size: 1.5rem;
              }
            }

            span {
              font-family: 'Roboto Bold', sans-serif;
            }
          }

          button {
            margin-top : .5rem;
            margin-bottom : .5rem;
            padding : 1rem;
            font-size : 1rem;
            border-radius: .5rem;
            width : 85%;
            font-family: 'Roboto Bold', sans-serif;
            color: var(--white);
            background-color: var(--dark-slate-grey);
            border: none;
            cursor: pointer;


          }

          button:hover {
            background: linear-gradient(90deg,var(--gradient-pink), var(--gradient-orange));
            box-shadow: var(--gradient-shadow) 0px 6px 12px -2px,  var(--gradient-shadow) 0px 3px 7px -3px;
          }

          #img {
            width : 15%;
            height : auto;
          }
        }

        @media screen and (min-width : 1024px) {
            transform: scale(0.8);
        }

        @media screen and (min-width : 1200px) {
            transform: scale(0.9);
        }

        @media screen and (min-width : 1600px) {
            transform: scale(1);
        }

    }
</style>